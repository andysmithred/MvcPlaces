@model MvcPlaces.Models.Territory

@{
    ViewData["Title"] = "Create";
}

<br />
<partial name="CreateMenu" model='new { Icon = "fas fa-plus-square" }' />
<br />

<div class="card border-0 w-75">
    <div class="card-header bg-secondary text-white">
        <div class="d-flex">
            <div><h5>Territory</h5></div>
            <div class="ml-auto"><h5><i class='fas fa-atlas'></i></h5></div>
        </div>
    </div>
    <div class="card-body bg-transparent text-dark">
        <form asp-action="Create">
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="Name" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Name" class="form-control rounded-right" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="FullName" class="input-group-text w-100"></label>
                </div>
                <input asp-for="FullName" class="form-control rounded-right" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="NativeName" class="input-group-text w-100"></label>
                </div>
                <input asp-for="NativeName" class="form-control rounded-right" />
                <span asp-validation-for="NativeName" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="ContinentId" class="input-group-text w-100"></label>
                </div>
                <select asp-for="ContinentId" asp-items="ViewBag.Continents" class="form-control rounded-right">
                    <option value="">--none--</option>
                </select>
                <span asp-validation-for="ContinentId" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="ParentId" class="input-group-text w-100"></label>
                </div>
                <select asp-for="ParentId" asp-items="ViewBag.Territories" class="form-control rounded-right">
                    <option value="">--none--</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="FlagId" class="input-group-text w-100"></label>
                </div>
                <select asp-for="FlagId" asp-items="ViewBag.Flags" class="form-control rounded-right">
                    <option value="">--none--</option>
                </select>
                <span asp-validation-for="FlagId" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="Population" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Population" class="form-control rounded-right" />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="Area" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Area" class="form-control rounded-right" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="Isocode" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Isocode" class="form-control rounded-right" />
                <span asp-validation-for="Isocode" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="Latitude" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Latitude" class="form-control rounded-right" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="Longitude" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Longitude" class="form-control rounded-right" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="Zoom" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Zoom" class="form-control rounded-right" />
                <span asp-validation-for="Zoom" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="TerritoryTypeId" class="input-group-text w-100"></label>
                </div>
                <select asp-for="TerritoryTypeId" asp-items="ViewBag.TerritoryTypes" class="form-control rounded-right"></select>
                <span asp-validation-for="TerritoryTypeId" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="GeoChartLevel" class="input-group-text w-100"></label>
                </div>
                <select asp-for="GeoChartLevel" asp-items="ViewBag.GeoChartLevels" class="form-control rounded-right">
                    <option value="">--none--</option>
                </select>
                <span asp-validation-for="GeoChartLevel" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend w-25">
                    <label asp-for="Complete" class="input-group-text w-100"></label>
                </div>
                <div class="input-group-prepend">
                    <div class="input-group-text  rounded-right">
                        <input asp-for="Complete" type="checkbox">
                    </div>
                </div>
                <span asp-validation-for="Complete" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}