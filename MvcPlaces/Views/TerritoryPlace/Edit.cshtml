@model MvcPlaces.Models.TerritoryPlace

@{
    ViewData["Title"] = "Edit";
}

<br />
<partial name="EditMenu" model='new { RouteId = Model.Id, Icon = "fas fa-edit" }' />
<br />

<div class="card border-0 w-75">
    <div class="card-header bg-secondary text-white">
        <div class="d-flex">
            <div><h5>Territory Place</h5></div>
            <div class="ml-auto"><h5><i class='fas fa-map-marked-alt'></i></h5></div>
        </div>
    </div>
    <div class="card-body bg-transparent text-dark">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="PlaceId" class="input-group-text w-100"></label>
                </div>
                <select asp-for="PlaceId" asp-items="ViewBag.Places" class="form-control rounded-right"></select>
                <span asp-validation-for="PlaceId" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="TerritoryId" class="input-group-text w-100"></label>
                </div>
                <select asp-for="TerritoryId" asp-items="ViewBag.Territories" class="form-control rounded-right"></select>
                <span asp-validation-for="TerritoryId" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}