@model MvcPlaces.Models.Continent

@{
    ViewData["Title"] = "Create";
}

<br />
<partial name="CreateMenu" />
<br />

<div class="card rounded-0">
    <div class="card-header bg-dark text-white rounded-0">Create</div>
    <div class="card-body bg-light text-dark">
        <form asp-action="Create">
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="Name" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="Code" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="ParentId" class="input-group-text w-100"></label>
                </div>
                <select asp-for="ParentId" asp-items="ViewBag.ContinentList" class="form-control">
                    <option value="">--none--</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark rounded-0" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
