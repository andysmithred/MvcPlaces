@model IEnumerable<MvcPlaces.ViewModels.Models.Import.RegionView>

@{
    ViewData["Title"] = "List Imported";
}

<br />
<partial name="IndexMenu.cshtml" />
<br />

<div class="panel panel-info">
    <div class="panel-body">
        @(Html
            .Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.Name).Titled("Name");
                columns.Add(model => model.Isocode).Titled("ISO");
                columns.Add(model => model.Type).Titled("Type");
                columns.Add(model => model.Country.Name).Titled("Country");
                columns.Add(model => model.ImportId.HasValue ? model.ImportId.Value.ToString() : "--").Titled("Import Id");
                columns.Add().Encoded(false).RenderedAs(model =>
                    "<div class='btn-group float-right'>" +
                        $"<a class='btn btn-dark btn-sm rounded-0' style='margin:1px' href='/ImportRegion/Delete/{model.Id}'>Delete</a>" +
                    "</div>"
                );
            })
            .Empty("No data found")
            .Filterable()
            .Sortable()
            .Pageable()
            .AppendCss("table-light table-striped table-hover")
        )
    </div>
</div>