@model MvcPlaces.ViewModels.Models.Main.TerritoryTypeView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="card-deck">
    <div class="card rounded-0">
        <div class="card-header bg-dark text-white rounded-0">Details</div>
        <div class="card-body bg-light">
            <div class="d-flex">
                <div class="w-50 p-1 pr-4 mb-1 bg-secondary text-white text-right"><label asp-for="Id"></label></div>
                <div class="w-50 p-1 pl-4 mb-1 bg-white"><span asp-for="Id">@Model.Id</span></div>
            </div>
            <div class="d-flex">
                <div class="w-50 p-1 pr-4 mb-1 bg-secondary text-white text-right"><label asp-for="Type"></label></div>
                <div class="w-50 p-1 pl-4 mb-1 bg-white"><span asp-for="Type">@Model.Type</span></div>
            </div>
            <div class="d-flex">
                <div class="w-50 p-1 pr-4 mb-1 bg-secondary text-white text-right"><label>Territories</label></div>
                <div class="w-50 p-1 pl-4 mb-1 bg-white"><a asp-action="TerritoriesList" asp-route-id="@Model.Id">@Model.Territories.Count</a></div>
            </div>
        </div>
    </div>
    <div class="card rounded-0">
        <div class="card-header bg-dark text-white rounded-0">Territories</div>
        <div class="card-body bg-light" style="height:200px;max-height:200px;overflow-y:auto;">

            @if (Model.Territories.Count > 0)
            {
                foreach (var item in Model.Territories.OrderBy(x => x.Name))
                {
                    <div class="d-flex">
                        <div class="w-100 p-1 pl-4 mb-1 bg-white text-dark">
                            <a asp-controller="Territory" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="d-flex">
                    <div class="w-100 p-1 pl-4 mb-1 bg-white">
                        <span>--</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>