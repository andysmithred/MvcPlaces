@model IEnumerable<MvcPlaces.ViewModels.Models.Main.PlaceGroupView>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add().Encoded(false).RenderedAs(model => $"<i class='{model.Icon}'></i>");
        columns.Add(model => model.Name).Titled("Name");
        columns.Add(model => model.Description).Titled("Description");
        columns.Add().Encoded(false).RenderedAs(model =>
            "<div class='btn-group float-right'>" +
                $"<a class='btn btn-dark btn-sm rounded-0' href='/PlaceGroup/Edit/{model.Id}'>Edit</a>" +
                $"<a class='btn btn-dark btn-sm rounded-0' href='/PlaceGroup/Details/{model.Id}'>Details</a>" +
                $"<a class='btn btn-dark btn-sm rounded-0' href='/PlaceGroup/Delete/{model.Id}'>Delete</a>" +
            "</div>"
        );
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
    .AppendCss("table-light table-striped table-hover")
)