@model IEnumerable<MvcPlaces.ViewModels.Models.Import.DriveView>

@(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add().Encoded(false).RenderedAs(model => $"<i class='fas fa-road'></i>");
            columns.Add(model => model.Name).Titled("Name");
            columns.Add(model => model.ImportId.HasValue ? model.ImportId.Value.ToString() : "--").Titled("Import Id");
            columns.Add().Encoded(false).RenderedAs(model =>
                "<div class='btn-group float-right'>" +
                    $"<a class='btn btn-secondary btn-sm rounded-left' href='/ImportDrive/Import/{model.Id}'>Import</a>" +
                    $"<a class='btn btn-secondary btn-sm rounded-right' href='/ImportDrive/QuickImport/{model.Id}'>Quick</a>" +
                "</div>"
            );
        })
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable()
        .AppendCss("table-dark table-striped table-hover rounded")
)