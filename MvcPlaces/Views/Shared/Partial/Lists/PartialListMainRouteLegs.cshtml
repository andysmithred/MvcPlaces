@model IEnumerable<MvcPlaces.ViewModels.Models.Main.RouteLegView>

@(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add().Encoded(false).RenderedAs(model => $"<i class='fas fa-route'></i>");
            columns.Add(model => model.Route.Name).Titled("Route");
            columns.Add(model => model.Number).Titled("Number");
            columns.Add(model => model.Origin.Name).Titled("Origin");
            columns.Add(model => model.Destination.Name).Titled("Destination");
            columns.Add().Encoded(false).RenderedAs(model =>
                "<div class='btn-group float-right'>" +
                    $"<a class='btn btn-secondary btn-sm rounded-left' href='/RouteLeg/Edit/{model.Id}'>Edit</a>" +
                    $"<a class='btn btn-secondary btn-sm rounded-0' href='/RouteLeg/Details/{model.Id}'>Details</a>" +
                    $"<a class='btn btn-secondary btn-sm rounded-right' href='/RouteLeg/Delete/{model.Id}'>Delete</a>" +
                "</div>"
            );
        })
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable()
        .AppendCss("table-dark table-striped table-hover rounded")
)
