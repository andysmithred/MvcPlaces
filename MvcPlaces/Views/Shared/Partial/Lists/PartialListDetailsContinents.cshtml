@model IEnumerable<MvcPlaces.ViewModels.Models.Main.ContinentView>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Name).Titled("Name");
        columns.Add(model => model.Code).Titled("Code");
        columns.Add(model => model.ParentId.HasValue ? model.Parent.Name : "--").Titled("Parent");
        columns.Add(model => model.Territories.Count).Titled("Territories");
        columns.Add().Encoded(false).RenderedAs(model =>
            "<div class='btn-group float-right'>" +
                $"<a class='btn btn-dark btn-sm rounded-0' href='/Continent/Details/{model.Id}'>Details</a>" +
            "</div>"
        );
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
    .AppendCss("table-light table-striped table-hover small")
)