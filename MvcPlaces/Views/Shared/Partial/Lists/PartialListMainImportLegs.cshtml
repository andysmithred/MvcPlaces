@model IEnumerable<MvcPlaces.ViewModels.Models.Import.LegView>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add().Encoded(false).RenderedAs(model => $"<i class='fas fa-plane'></i>");
        columns.Add(model => model.Number).Titled("Number");
        columns.Add(model => model.Route.Name).Titled("Route");
        columns.Add(model => model.OriginAirfield.Name).Titled("Origin");
        columns.Add(model => model.DestinationAirfield.Name).Titled("Destination");
        columns.Add(model => model.ImportId.HasValue ? model.ImportId.Value.ToString() : "--").Titled("Import Id");
        columns.Add().Encoded(false).RenderedAs(model =>
            "<div class='btn-group float-right'>" +
                $"<a class='btn btn-secondary btn-sm rounded' style='margin:1px' href='/ImportLeg/Import/{model.Id}'>Import</a>" +
            "</div>"
        );
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
    .AppendCss("table-dark table-striped table-hover rounded")
)
