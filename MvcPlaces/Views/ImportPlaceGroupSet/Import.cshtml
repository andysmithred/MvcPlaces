@model MvcPlaces.ViewModels.Models.Import.PlaceGroupSetView

@{
    ViewData["Title"] = "Import";
}

<br />
<partial name="ImportMenu" />
<br />

<div class="card border-0">
    <div class="card-header bg-dark text-white rounded-top">Place Group Set</div>
    <div class="card-body bg-light text-dark rounded-bottom">
        <h3>Are you sure you want to import this?</h3>
        <hr />
        <div class="d-flex">
            <div class="w-25 p-1 pr-4 mb-1 bg-secondary text-white text-right rounded-left"><label asp-for="Id"></label></div>
            <div class="w-75 p-1 pl-4 mb-1 bg-white rounded-right">@Model.Id</div>
        </div>
        <div class="d-flex">
            <div class="w-25 p-1 pr-4 mb-1 bg-secondary text-white text-right rounded-left"><label asp-for="Place"></label></div>
            <div class="w-75 p-1 pl-4 mb-1 bg-white rounded-right">@Model.Place.Name</div>
        </div>
        <div class="d-flex">
            <div class="w-25 p-1 pr-4 mb-1 bg-secondary text-white text-right rounded-left"><label asp-for="Group"></label></div>
            <div class="w-75 p-1 pl-4 mb-1 bg-white rounded-right">@Model.Group.Name</div>
        </div>
        <hr />
        <form asp-action="Import">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Import" class="btn btn-dark" />
        </form>
    </div>
</div>